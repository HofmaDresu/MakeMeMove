<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MakeMeMove.View.ManageExercise">
  <StackLayout VerticalOptions="FillAndExpand"
                   HorizontalOptions="FillAndExpand"
                   Orientation="Vertical"
                   Spacing="15" >
    <Label>Exercise Type</Label>
    <Picker x:Name="ExerciseTypePicker"></Picker>
    <Entry x:Name="CustomExerciseEntry" IsVisible="False" Placeholder="Custom Exercise Name"></Entry>
    <Label>Number of Repititions</Label>
    <Entry x:Name="RepititionEntry" Keyboard="Numeric"></Entry>
    <StackLayout VerticalOptions="Fill"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Horizontal"
                     Spacing="15" >
      <Button x:Name="Save" Clicked="SaveData" Text="Save"></Button>
      <Button x:Name="Cancel" Clicked="CancelChanges" Text="Cancel"></Button>
    </StackLayout>
  </StackLayout>
</ContentPage>