<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/Notifications"
        android:key="@string/NotificationsKey">
        <CheckBoxPreference
            android:key="@string/CheckHistoryReminderKey"
            android:summary="@string/CheckHistoryReminderSettingSummary"
            android:title="@string/CheckHistoryReminderSettingTitle"
            android:defaultValue="true" />
        <Preference 
            android:showDefault="true"
            android:key="@string/NotificationSoundKey" 
            android:title="@string/NotificationSoundSettingTitle"
            android:defaultValue="content://settings/system/notification_sound"
            android:ringtoneType="notification" />
    </PreferenceCategory>
</PreferenceScreen>