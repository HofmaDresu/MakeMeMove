<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="ActivityStyle" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/PrimaryColor</item>
    <item name="colorPrimaryDark">@color/PrimaryColorDark</item>
    <item name="colorAccent">@color/InteractibleTextColor</item>
    <item name="android:textColor">@color/PrimaryColor</item>
    <item name="android:windowBackground">@color/MainBackgroundColor</item>
    <item name="android:spinnerStyle">@style/FudistSpinner</item>
  </style>
  <style name="FudistSpinner" parent="android:Widget.Holo.Light.Spinner">
  </style>
  <style name="TopMarginedLayoutElement">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">10dp</item>
  </style>

  <style name="FailingText" >
    <item name="android:textColor">@color/FailureColor</item>
    <item name="android:visibility">gone</item>
    <item name="android:gravity">center</item>
    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
</resources>