<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="ActivityStyle" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/PrimaryColor</item>
    <item name="colorPrimaryDark">@color/PrimaryColorDark</item>
    <item name="colorAccent">@color/InteractibleTextColor</item>
    <item name="android:textColor">@color/PrimaryColor</item>
    <item name="android:windowBackground">@color/MainBackgroundColor</item>
    <item name="android:spinnerStyle">@style/FudistSpinner</item>
  </style>
  <style name="FudistSpinner" parent="android:Widget.Holo.Light.Spinner">
  </style>
  <style name="TopMarginedLayoutElement">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">10dp</item>
  </style>

  <style name="FailingText" >
    <item name="android:textColor">@color/FailureColor</item>
    <item name="android:visibility">gone</item>
    <item name="android:gravity">center</item>
    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="SettingsHeader">
    <item name="android:background">@color/TertiaryColor</item>
    <item name="android:paddingLeft">20dp</item>
    <item name="android:paddingTop">15dp</item>
    <item name="android:paddingBottom">15dp</item>
  </style>
  <style name="SettingsHeaderMainText">
    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="SettingsHeaderDetailsText">
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    <item name="android:ellipsize">end</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="ExerciseTitle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
  </style>
  
  <style name="TopAndSideSpacedRootElement">
    <item name="android:paddingTop">20dp</item>
    <item name="android:paddingLeft">20dp</item>
    <item name="android:paddingRight">20dp</item>
  </style>
  <style name="TopSpacedRootElement">
    <item name="android:paddingTop">20dp</item>
  </style>
  <style name="TopSpacedElement">
    <item name="android:layout_marginTop">10dp</item>
  </style>

  <style name="FreeButton">
    <item name="android:background">@drawable/FreeButton</item>
    <item name="android:textColor">@color/InteractibleTextColor</item>
    <item name="android:stateListAnimator">@null</item>
  </style>
</resources>